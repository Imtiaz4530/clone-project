<%- include('../../partials/header.ejs') %> 
<div class="container-fluid">
    <div class="row">
        <div class="col md-2 ms-3">
            <%- include('../../partials/sidebar.ejs') %>
        </div>   
            <div class="col-md-10 mydiv3-5">
                <div class="row">
                    <div class="col-md-9 offset-md-2">
                        <div class="card card-body mx-5">
                            <h3>List of my post</h3>
                            <div class="row mt-4">
                                <% if(posts.length === 0) {%>
                                    <div class="text-center text-muted">
                                        <h5>No post available</h5>
                                        <a href="/posts/create" class="btn btn-primary">Create new post</a>
                                    </div>
                                <% } else {%>  
                                    <% for (const post of posts.reverse()) { %>
                                        <div class="card col-sm-3 m-3">
                                            <% if (post.thumbnail) { %>
                                                <img width="100px" src="<%= post.thumbnail %> " alt="Thumbnail" class="card-img-top mt-3">
                                            <% } %>
                                            <div class="card-body">
                                                <a href="/posts/edit/<%= post._id %> " style="color: #222;" ><h5><%= post.title %></h5></a>
                                            </div>
                                        </div>
                                    <% } %> 
                                <% } %>
                            </div> 
                        </div>
                    </div>
                </div>
            </div>
    </div>
</div>
<%- include('../../partials/footer.ejs') %>
</body>
</html>
