<%- include('../../partials/header.ejs') %> 
<div class="container my-container my-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 ">  
            <div class="card card-body mt-2">
                <h4 class="mb-4">Create a new account</h4>
                <form action="/auth/singup" method="POST">
                    <div class="form-group mb-3">
                    <label for="username" class="form-label">Username(Must be uniq)</label>
                    <input type="text" name="username" id="username" class="form-control <%= error.username ? 'is-invalid' : '' %> " value="<%= value.username ? value.username : '' %>" placeholder="Enter your name" >
                    <div class="invalid-feedback">
                        <%= error.username && error.username %> 
                    </div>
                    </div>
                    <div class="form-group mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" name="email" id="email" class="form-control <%= error.email ? 'is-invalid' : '' %>" value="<%= value.email ? value.email : '' %>" placeholder="Enter your email" >
                        <div class="invalid-feedback">
                            <%= error.email && error.email %> 
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" name="password" id="password" class="form-control <%= error.password ? 'is-invalid' : '' %>" value="<%= value.password ? value.password : '' %>" placeholder="Enter your password" >
                        <div class="invalid-feedback">
                            <%= error.password && error.password %> 
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <label for="confirmPassword" class="form-label">Confirm password</label>
                        <input type="password" name="confirmPassword" id="confirmPassword" class="form-control <%= error.confirmPassword ? 'is-invalid' : '' %>" placeholder="Re-enter your password" >
                        <div class="invalid-feedback">
                            <%= error.confirmPassword && error.confirmPassword %> 
                        </div>
                    </div>
                    <button type="submit" class="mt-2 mb-3 btn btn-dark">Singup</button>
                    <span id="spanforSingup"><a href="/auth/login">Already have an account? Login here</a></span>
                </form>
            </div>
        </div>
    </div>
</div>  
  <%- include('../../partials/footer.ejs') %> 