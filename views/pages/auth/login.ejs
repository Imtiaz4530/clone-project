<%- include('../../partials/header.ejs') %> 
<div class="container my-container my-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 ">  
            <div class="card card-body mt-2">
                <h4 class="mb-4">Login To your Account</h4>
                <form action="/auth/login" method="POST">
                    <div class="form-group mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input autocomplete="off" type="username" name="username" id="username" class="form-control <%= error.username ? 'is-invalid' : '' %>" value="<%= value.username ? value.username : '' %>" placeholder="Enter your username">
                        <div class="invalid-feedback">
                            <%= error.username && error.username %>
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input autocomplete="off" type="password" name="password" id="password" class="form-control <%= error.password ? 'is-invalid' : '' %>"  value="<%= value.password ? value.password : '' %>"  placeholder="Enter your password">
                        <div class="invalid-feedback">
                            <%= error.password && error.password %>
                        </div>
                    </div>
                    <button type="submit" class="mt-2 mb-3 btn btn-dark">Login</button>
                    <span id="spanforlogin"><a href="/auth/singup">Don't have an account? Create one</a></span>
                </form>
            </div>
        </div>
    </div>
</div>  
  <%- include('../../partials/footer.ejs') %> 


